<?xml version='1.0' encoding='utf-8'?>

<scene>
	<integrator type="path_sdf"/>

	<camera type="perspective">
		<float name="fov" value="100.7856"/>
		<transform name="toWorld">
			<scale value="1,1,1"/>
			<lookat target="0, 0.893051, 4.41198" origin="0, 0.919769, 5.41159" up="0, 1, 0"/>
		</transform>

		<integer name="height" value="600"/>
		<integer name="width" value="800"/>
	</camera>

	<sampler type="independent">
		<integer name="sampleCount" value="1"/>
	</sampler>

	<!-- Define the light source -->
	<emitter type="environment">
		<string name="filename" value="env.exr"/>
		<float name ="rotate" value="0"/>
		<color name ="radiance" value="200,200,200"/>
	</emitter>


	<mesh type="obj">
		<string name="filename" value="unitCube.obj"/>
		<transform name="toWorld">
			<translate value="0,0,0"/>
			<scale value="1,1,1"/>
		</transform>
		<bsdf type="diffuse">
			<color name="albedo" value="1, 1, 1"/>
		</bsdf>
	</mesh>

</scene>
