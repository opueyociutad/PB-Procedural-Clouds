<?xml version='1.0' encoding='utf-8'?>

<scene>
	<integrator type="path_media_slides_refactor"/>

	<camera type="perspective">
		<float name="fov" value="60.7856"/>
		<transform name="toWorld">
			<scale value="1,1,1"/>
			<lookat target="0, 10, 0" origin="0, 0, 10" up="0, 1, 0"/>
		</transform>

		<integer name="height" value="600"/>
		<integer name="width" value="800"/>
	</camera>

	<sampler type="independent">
		<integer name="sampleCount" value="16"/>
	</sampler>

	<!-- Define the light source -->
	<emitter type="environment">
		<string name="filename" value="env.exr"/>
		<float name ="rotate" value="0"/>
		<color name ="radiance" value="200,200,200"/>
	</emitter>

	<emitter type="pointlight">
		<color name="radiance" value="1200, 1100, 1000"/>
		<point name="position" value="0, 15, 0"/>
	</emitter>

	<medium type="heterogeneous_media">
		<float name="max_rho" value="1.0"/>
		<float name="sigma_a" value="0.1"/>
		<float name="sigma_s" value="0.4"/>
		<float name="delta_t" value="0.01"/>

		<phase type="henyey_greenstein">
			<float name="g" value="0.0"/>
		</phase>

		<density type="sky">
			<float name="seed" value="29"/>
			<vector name="scale" value="1, 1, 1"/>
			<vector name="position" value="0, 10, 0"/>
		</density>

		<mesh type="obj">
			<string name="filename" value="unitCube.obj"/>
			<transform name="toWorld">
				<scale value="20, 4, 20"/>
				<translate value="0, 10, 0"/>
			</transform>
			<bsdf type="diffuse">
				<color name="albedo" value="0,0,0"/>
			</bsdf>
		</mesh>

	</medium>

</scene>
